TOP_DIR = $(TUP_CWD)
import PS2SDK
CFLAGS = -std=gnu99 -G0 -Og -g -fno-exceptions -fno-common -Wall -Werror-implicit-function-declaration -fdiagnostics-color=always
INC = -I$(PS2SDK)/common/include -I$(TOP_DIR)/common

!cc = |> ^j^ $(CC) $(CFLAGS) $(INC) -x c -c %f -o %o |> %B.o
!ld = |> $(CC) %f -o %o $(LDFLAGS) |>
